
<odoo>
    <data>
        <record id="view_incubation_wizard_form" model="ir.ui.view">
            <field name="name">incubation.wizard.form</field>
            <field name="model">steril_supervisorio.incubation_wizard</field>
            <field name="arch" type="xml">
                <form string="Wizard Ciclos">
                    <group>
                        <group>
                            <field name="ciclo" 
                            invisible="1"
                            />
                            <field name="state_ciclo" 
                            invisible="1"
                            />
                            <field name="reprovado" 
                            invisible="1"
                            />
                            
                            <field name="date_start" string="Data de Inicio" 
                            attrs="{'invisible': [('state_ciclo','not in',('finalizado'))] }"
                            />
                            <field name="date_end" string="Data de Leitura" 
                            attrs="{'invisible': [('state_ciclo','not in',('esperando_biologico'))] }"
                            />
                            <field name="resultado_bi" string="Resultado BI"  widget="radio" 
                            attrs="{'invisible': [('state_ciclo','not in',('esperando_biologico'))],'required': [('state_ciclo','in',('esperando_biologico'))]}"
                            />
                            <field name="motivo_reprovado" string="Motivo Reprovação"  
                            attrs="{'invisible': [('state_ciclo','not in',('esperando_aprovacao_supervisor')),('reprovado','not',True)],'required': [('state_ciclo','in',('esperando_aprovacao_supervisor')),('reprovado','=',True)]}"
                            />
                        </group>
                    </group>
                    <footer>
                        <button name="cancel" string="Cancelar" class="btn-secondary" special="cancel"/>
                        <button name="save" string="Salvar" class="btn-primary" type="object"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>